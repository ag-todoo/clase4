<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="andres_modulo.list">
      <field name="name">andres_modulo list</field>
      <field name="model">andres_modulo.andres_modulo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="andres_modulo.action_window">
      <field name="name">LFPV-1993</field>
      <field name="res_model">andres_modulo.andres_modulo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="andres_modulo.action_server">
      <field name="name">andres_modulo server</field>
      <field name="model_id" ref="model_andres_modulo_andres_modulo"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    <menuitem name="andres_modulo" id="andres_modulo.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="andres_modulo.menu_1" parent="andres_modulo.menu_root"/>
    <menuitem name="Menu 2" id="andres_modulo.menu_2" parent="andres_modulo.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="andres_modulo.menu_1_list" parent="andres_modulo.menu_1"
              action="andres_modulo.action_window"/>
    <menuitem name="Server to list" id="andres_modulo" parent="andres_modulo.menu_2"
              action="andres_modulo.action_server"/>
  </data>
</odoo>